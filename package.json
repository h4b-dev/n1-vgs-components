{
  "name": "@h4b-dev/n1-vgs-components",
  "description": "components for secure checkout",
  "version": "0.1.1",
  "type": "module",
  "module": "dist/index.js",
  "main": "dist/index.js",
  "source": "src/index.js",
  "files": [
    "dist"
  ],
  "browserslist": [
    "> 1%",
    "not dead",
    "not op_mini all",
    "last 2 years"
  ],
  "sideEffects": [
    "**/*.css"
  ],
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/h4b-dev/n1-vgs-components.git"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "scripts": {
    "dev": "ladle serve",
    "build": "vite build",
    "lint": "eslint . --ext js,jsx --report-unused-disable-directives --max-warnings 0",
    "deploy": "bun install && rm -rf dist node_modules/react node_modules/react-dom && bun run build && npm publish",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:bun": "bun test --preload ./src/test/bun-setup.js",
    "test:coverage": "vitest run -c vitest.coverage.config.js"
  },
  "dependencies": {
    "@vgs/collect-js": "0.7.2",
    "@vgs/collect-js-react": "2.0.0",
    "postcss-import": "16.1.1",
    "vite": "7.1.7"
  },
  "devDependencies": {
    "@ladle/react": "5.0.3",
    "@testing-library/jest-dom": "6.8.0",
    "@testing-library/react": "16.3.0",
    "@testing-library/user-event": "14.6.1",
    "@vitejs/plugin-react-swc": "4.1.0",
    "@vitest/coverage-v8": "3.2.4",
    "@vitest/ui": "3.2.4",
    "autoprefixer": "10.4.21",
    "eslint": "9.36.0",
    "eslint-config-prettier": "10.1.8",
    "eslint-import-resolver-vite": "2.1.0",
    "eslint-plugin-import": "2.32.0",
    "eslint-plugin-prettier": "5.5.4",
    "eslint-plugin-react": "7.37.5",
    "eslint-plugin-react-hooks": "5.2.0",
    "eslint-plugin-react-refresh": "0.4.22",
    "happy-dom": "18.0.1",
    "jsdom": "27.0.0",
    "ladle": "0.0.0",
    "postcss": "8.5.6",
    "prettier": "3.6.2",
    "prop-types": "15.8.1",
    "vitest": "3.2.4"
  },
  "peerDependencies": {
    "react": "19.1.1",
    "react-dom": "19.1.1"
  }
}