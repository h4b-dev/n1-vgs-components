{
  "name": "@h4b-dev/n1-vgs-components",
  "description": "components for secure checkout",
  "version": "0.1.1",
  "type": "module",
  "module": "dist/index.js",
  "main": "dist/index.js",
  "source": "src/index.js",
  "files": [
    "dist"
  ],
  "browserslist": [
    "> 1%",
    "not dead",
    "not op_mini all",
    "last 2 years"
  ],
  "sideEffects": [
    "**/*.css"
  ],
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/h4b-dev/n1-vgs-components.git"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "scripts": {
    "dev": "ladle serve",
    "build": "vite build",
    "lint": "eslint . --ext js,jsx --report-unused-disable-directives --max-warnings 0",
    "deploy": "bun install && rm -rf dist node_modules/react node_modules/react-dom && bun run build && npm publish",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:bun": "bun test --preload ./src/test/bun-setup.js",
    "test:coverage": "vitest run -c vitest.coverage.config.js"
  },
  "dependencies": {
    "@vgs/collect-js": "*",
    "@vgs/collect-js-react": "*",
    "postcss-import": "*",
    "vite": "*"
  },
  "devDependencies": {
    "@ladle/react": "*",
    "@testing-library/jest-dom": "*",
    "@testing-library/react": "*",
    "@testing-library/user-event": "*",
    "@vitejs/plugin-react-swc": "*",
    "@vitest/coverage-v8": "*",
    "@vitest/ui": "*",
    "autoprefixer": "*",
    "eslint": "*",
    "eslint-config-prettier": "*",
    "eslint-import-resolver-vite": "*",
    "eslint-plugin-import": "*",
    "eslint-plugin-prettier": "*",
    "eslint-plugin-react": "*",
    "eslint-plugin-react-hooks": "*",
    "eslint-plugin-react-refresh": "*",
    "happy-dom": "*",
    "jsdom": "*",
    "ladle": "*",
    "postcss": "*",
    "prettier": "*",
    "prop-types": "*",
    "vitest": "*"
  },
  "peerDependencies": {
    "react": "*",
    "react-dom": "*"
  }
}
