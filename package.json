{
  "name": "@h4b-dev/n1-vgs-components",
  "description": "components for secure checkout",
  "version": "0.0.6",
  "type": "module",
  "module": "dist/index.js",
  "main": "dist/index.js",
  "source": "src/index.js",
  "files": [
    "dist"
  ],
  "browserslist": [
    "> 1%",
    "not dead",
    "not op_mini all",
    "last 2 years"
  ],
  "sideEffects": [
    "**/*.css"
  ],
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/h4b-dev/n1-vgs-components.git"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "scripts": {
    "dev": "ladle serve",
    "build": "vite build",
    "lint": "eslint . --ext js,jsx --report-unused-disable-directives --max-warnings 0",
    "deploy": "bun install && rm -rf dist node_modules/react node_modules/react-dom && bun run build && npm publish",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:bun": "bun test --preload ./src/test/bun-setup.js",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@vgs/collect-js": "0.6.3",
    "@vgs/collect-js-react": "1.1.0",
    "postcss-import": "16.1.0",
    "vite": "^5.3.4"
  },
  "devDependencies": {
    "@ladle/react": "^4.0.1",
    "@vitejs/plugin-react-swc": "^3.5.0",
    "@vitest/ui": "^2.1.3",
    "autoprefixer": "^10.4.19",
    "eslint": "^8.53.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-import-resolver-vite": "^1.3.1",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.4",
    "happy-dom": "^15.7.4",
    "ladle": "^0.0.0",
    "postcss": "^8.4.39",
    "prettier": "^3.1.0",
    "prop-types": "^15.8.1",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^14.2.1",
    "@testing-library/user-event": "^14.5.2",
    "jsdom": "^24.0.0",
    "vitest": "^1.3.1"
  },
  "peerDependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  }
}
